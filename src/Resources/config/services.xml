<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Logistic Surcharge Processor -->
        <service id="Act\OrderSurcharges\Cart\LogisticSurchargeProcessor">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="language.repository"/>
            <tag name="shopware.cart.processor" priority="-5000"/>
        </service>

        <!-- COD Fee Processor -->
        <service id="Act\OrderSurcharges\Cart\CodFeeProcessor">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="language.repository"/>
            <tag name="shopware.cart.processor" priority="-5100"/>
        </service>

        <!-- Payment Method Changed Subscriber -->
        <service id="Act\OrderSurcharges\Subscriber\PaymentMethodChangedSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
